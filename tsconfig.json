{
  "include": [
    "./src/**/*",
    "./cypress/**/*",
    "./server/*"
  ],
  "exclude": [                                           /* <JL> */
    "lib",
    "node_modules",
  ],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    //"resolveJsonModule": true,
    //"noEmit": true,
    "outDir": "lib/esm",
    "sourceMap": true,                                   /* Create source map files for emitted JavaScript files. <JL> */
    "types": [
      "cypress",
      "cypress-file-upload"
    ],
    "isolatedModules": true
  }
}
